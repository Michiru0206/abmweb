<h1>Today's Diary</h1>
<%= form_for(@diary) do |f|%>
    <div><%= f.label :writing_date%></div>
    <div><%= f.date_select :writing_date%></div>
 
    <div><%= f.label :title %></div>
    <div><%= f.text_field :title %></div>

    <div><%= f.submit %></div>
<% end %>
<%= link_to 'Back', diaries_path%>
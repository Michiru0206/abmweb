<h1>Diaries</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.writing_date %></td>
        <td><%= link_to diary.title, "diaries/#{diary.id}" %></td>
        <td><%= link_to 'Edit', edit_diary_path(diary)%></td>
        <td><%= link_to 'Delete', diary_path(diary), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Write Today's Diary", new_diary_path %>
